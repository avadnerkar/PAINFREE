<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/card_border"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_secondary"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/title"
                android:textStyle="bold"
                android:text="@string/assessment1"
                android:gravity="center"
                style="@style/textFormStyle"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_cancel"
                app:elevation="4dp"
                app:backgroundTint="@color/MidnightBlue"
                app:fabSize="mini"
                android:layout_margin="@dimen/button_layout_margin"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonAdminDate"
                style="@style/buttonCard"
                android:text="@string/select_date"/>

            <CheckBox
                android:id="@+id/buttonAdminDateNone"
                android:paddingEnd="@dimen/button_layout_margin"
                android:layout_gravity="center_vertical"
                android:text="@string/none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkboxStyle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/buttonAdminTime"
                style="@style/buttonCard"
                android:text="@string/select_time"/>

            <CheckBox
                android:id="@+id/buttonAdminTimeNone"
                android:paddingEnd="@dimen/button_layout_margin"
                android:layout_gravity="center_vertical"
                android:text="@string/none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkboxStyle"/>

        </LinearLayout>



        <TextView
            android:textStyle="bold"
            android:text="@string/type_of_analgesic_administered"
            style="@style/textFormStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_acetaminophen"
                android:text="@string/acetaminophen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/checkboxStyle"/>

            <LinearLayout
                android:id="@+id/acetaminophenGroup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:hint="@string/enter_dose"
                    android:id="@+id/edit_acetaminophen_dose"
                    style="@style/editTextFormStyle" />

                <TextView
                    android:id="@+id/text_acetaminophen_order"
                    android:textStyle="bold"
                    android:text="@string/type_of_order"
                    style="@style/textFormStyle" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/acetaminophen_order"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_nsaids"
                android:text="@string/nsaids"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/checkboxStyle"/>

            <LinearLayout
                android:id="@+id/nsaidsGroup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:hint="@string/enter_dose"
                    android:id="@+id/edit_nsaids_dose"
                    style="@style/editTextFormStyle" />

                <TextView
                    android:id="@+id/text_nsaids_order"
                    android:textStyle="bold"
                    android:text="@string/type_of_order"
                    style="@style/textFormStyle" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nsaids_order"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_opioid"
                android:text="@string/opioid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/checkboxStyle"/>

            <LinearLayout
                android:id="@+id/opioidGroup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:hint="@string/enter_dose"
                    android:id="@+id/edit_opioid_dose"
                    style="@style/editTextFormStyle" />

                <TextView
                    android:id="@+id/text_opioid_order"
                    android:textStyle="bold"
                    android:text="@string/type_of_order"
                    style="@style/textFormStyle" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/opioid_order"/>

            </LinearLayout>


        </LinearLayout>


        <CheckBox
            style="@style/checkboxStyle"
            android:text="@string/refusal_of_analgesia"
            android:id="@+id/analgesia_refused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>