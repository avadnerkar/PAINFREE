                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/leftAnkle"
                android:tag="Left"
                android:text="@string/left"
                style="@style/checkboxStyle"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/rightAnkle"
                android:tag="Right"
                android:text="@string/right"
                style="@style/checkboxStyle"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>



        <CheckBox
            android:id="@+id/tibiaFibula"
            android:tag="tibiaFibula"
