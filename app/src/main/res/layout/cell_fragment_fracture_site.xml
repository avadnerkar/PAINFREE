                style="@style/checkboxStyle"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>



        <CheckBox
            android:id="@+id/femur"
            android:tag="femur"
