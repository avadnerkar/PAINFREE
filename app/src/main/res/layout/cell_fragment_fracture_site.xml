<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/card_border"
    android:clipToPadding="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:elevation="2dp"
        android:animateLayoutChanges="true">

        <TextView
            android:text="@string/fracture_title"
            style="@style/textFormStyle"/>

        <CheckBox
            android:id="@+id/foot"
            android:tag="foot"
            android:text="@string/foot"
            android:checked="false"
            style="@style/checkboxStyle" />

        <LinearLayout
            android:id="@+id/footLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/leftFoot"
                android:tag="Left"
                android:text="@string/left"
                style="@style/checkboxStyle"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/rightFoot"
                android:tag="Right"
                android:text="@string/right"
                style="@style/checkboxStyle"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>



        <CheckBox
            android:id="@+id/ankle"
            android:tag="ankle"
            android:text="@string/ankle"
            android:checked="false"
            style="@style/checkboxStyle" />

