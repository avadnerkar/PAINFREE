<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/RoyalBlue</item>
        <item name="colorPrimaryDark">@color/MidnightBlue</item>
        <item name="colorAccent">@color/BlackLight</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
        <item name="android:datePickerDialogTheme">@style/style_date_picker_dialog</item>
        <item name="android:timePickerDialogTheme">@style/style_time_picker_dialog</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingStart">@dimen/text_padding</item>
        <item name="android:paddingEnd">@dimen/text_padding</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingStart">@dimen/text_padding</item>
        <item name="android:paddingEnd">@dimen/text_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="style_date_picker_dialog" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowIsFloating">true</item>
        <item name="android:datePickerStyle">@style/style_datepicker</item>
    </style>

    <style name="style_datepicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="style_time_picker_dialog" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowIsFloating">true</item>
        <item name="android:timePickerStyle">@style/style_timepicker</item>
    </style>

    <style name="style_timepicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
</resources>